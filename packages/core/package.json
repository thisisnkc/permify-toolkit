{
  "name": "@permify-toolkit/core",
  "type": "module",
  "version": "1.0.0",
  "description": "The ultimate TypeScript engine for Permify: Type-safe schema DSL, simplified client, and shared configuration.",
  "author": "Nikhil aka thisisnkc",
  "license": "MIT",
  "homepage": "https://github.com/thisisnkc/permify-toolkit/tree/main/packages/core#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/thisisnkc/permify-toolkit.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/thisisnkc/permify-toolkit/issues"
  },
  "keywords": [
    "permify",
    "authorization",
    "access-control",
    "rbac",
    "rebac",
    "permissions",
    "policy-engine",
    "authorization-client",
    "client-wrapper",
    "authorization-toolkit",
    "schema-builder",
    "authorization-schema",
    "type-safe",
    "multi-tenant"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.js",
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "cross-env NODE_NO_WARNINGS=1 npx tsx ../../tests/setup.ts",
    "test:file": "cross-env NODE_NO_WARNINGS=1 npx tsx ../../tests/setup.ts --files",
    "test:group": "cross-env NODE_NO_WARNINGS=1 npx tsx ../../tests/setup.ts --groups",
    "test:grep": "cross-env NODE_NO_WARNINGS=1 npx tsx ../../tests/setup.ts --tests",
    "lint": "eslint 'src/**/*.ts' 'tests/**/*.ts' --fix",
    "build": "tsc"
  },
  "dependencies": {
    "@permify/permify-node": "^1.1.4",
    "jiti": "^2.6.1"
  },
  "devDependencies": {
    "ts-node": "^10.x",
    "typescript": "^4.x"
  }
}
